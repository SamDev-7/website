---
interface Props {
  name: string;
  desc: string;
  class?: string;
  href?: string;
}

const { name, desc, class: className, href } = Astro.props;
---

<a
  href={href ? href : "#"}
  class=`${className} border shadow border-gray-200 rounded py-4 px-5 w-full ${href ? 'motion-safe:hover:-translate-y-1 motion-safe:hover:shadow-md motion-safe:transition' : ''}`
>
  <div class="space-y-2">
    <h3 class="text-xl font-medium">{name}</h3>
    <p class="text-sm">{desc}</p>
  </div>
</a>
