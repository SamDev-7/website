---
const commitSha: string =
  import.meta.env.PUBLIC_VERCEL_GIT_COMMIT_SHA ?? "unknown";
---

<footer class="flex justify-center text-gray-600 text-sm pb-8">
  <div class="max-w-[60rem] grow px-12 flex">
    <p class="grow">Thanks for stopping by!</p>
    <p>
      Copyright 2024 Sam Liu. Build <a
        class="italic hover:underline"
        href=`https://github.com/samdev-7/website/commit/${commitSha}`
        target="_blank">{commitSha.substring(0, 7)}</a
      > from <a
        href="https://github.com/samdev-7/website/"
        target="_blank"
        class="hover:underline">samdev-7/website</a
      >.
    </p>
  </div>
</footer>
